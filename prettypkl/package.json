{
  "name": "prettypkl",
  "displayName": "PrettyPKL",
  "description": "VSCode Prettify PKL Extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "main": "./src/extension.js",  
  "contributes": {
    "languages": [
      {
        "id": "pkl",
        "aliases": [
          "PKL",
          "pkl"
        ],
        "extensions": [
          ".pkl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "pkl",
        "scopeName": "source.pkl",
        "path": "./syntaxes/pkl.tmLanguage.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:pkl"
  ],
  "scripts": {},
  "devDependencies": {},
  "dependencies": {}
}
